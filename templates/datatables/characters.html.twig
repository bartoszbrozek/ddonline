<div class="box">
    <div class="box-header">
        <h3 class="box-title">Your Characters</h3>
    </div>

    <!-- /.box-header -->
    <div class="box-body">
        <table id="users" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Level</th>
                <th>Race</th>
                <th>Class</th>
                <th>Alignment</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            {% for character in characters %}
                <tr>
                    <td>{{ character.name }}</td>
                    <td>{{ character.level }}</td>
                    <td>{{ character.race.race }}</td>
                    <td>{{ character.alignment.alignment }}</td>
                    <td>{{ character.className.className }}</td>
                    <td>
                        <a href="" class="btn btn-info">Show</a>
                        <a href="{{ path("character/edit", {'id': character.id}) }}" class="btn btn-default">Edit</a>
                        <a href="#" class="btn btn-danger askRemoveCharacter" data-toggle="modal"
                           data-target="#askRemoveCharacter"
                           data-path="{{ path("character/remove", {'id': character.id}) }}">Remove</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% include 'modals/askRemoveCharacter.html.twig' %}
